{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "sourceRoot": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
